<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.preview.location.MapActivity">


    <FrameLayout
            android:id="@+id/container_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
                android:background="@color/colorAccent"
                android:layout_gravity="bottom"
                android:paddingStart="180dp"
                android:paddingEnd="@dimen/module_2"
                android:paddingTop="@dimen/module_2"
                android:paddingBottom="@dimen/module_2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_post_caption"
                    tools:text="caption"
                    android:textSize="@dimen/font_body_2"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_post_location"
                    tools:text="location"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_caption_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="@dimen/module_1"
                android:id="@+id/image_post_preview"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="160dp"
                android:layout_height="160dp"/>



    </FrameLayout>

    <androidx.appcompat.widget.Toolbar
            xmlns:tools="http://schemas.android.com/tools"
            app:theme="@style/ThemeToolbar"
            android:id="@+id/toolbar_map"
            android:background="@color/colorAccent"
            app:title="Post Location"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_post_avatar"
            android:padding="@dimen/module_1"
            android:layout_marginTop="55dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="65dp"
            android:layout_height="65dp"/>


</FrameLayout>