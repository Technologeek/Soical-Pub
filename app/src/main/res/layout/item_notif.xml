<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_notif"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/default_card_radius"
        android:layout_marginTop="@dimen/module_1"
        android:layout_marginStart="@dimen/module_1"
        android:layout_marginEnd="@dimen/module_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_margin="8dp"
                android:layout_width="28dp"
                android:id="@+id/image_actor_avatar"
                android:layout_gravity="center_vertical"
                android:layout_height="28dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/module_0_5"
                android:id="@+id/text_actor_name"
                tools:text="User Name"
                android:padding="@dimen/module_1"
                android:textSize="@dimen/font_body_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>