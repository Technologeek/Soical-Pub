<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/pub_text_color_primary_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.members.post.PostFragment">

    <androidx.appcompat.widget.Toolbar
            android:background="@color/white"
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="55dp">

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <com.google.android.material.button.MaterialButton
                    android:id="@+id/fab_upload"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:icon="@drawable/ic_add_post"
                    app:iconTint="@color/pub_color_accent"
                    android:text="Create new post"
                    android:textColor="@color/pub_color_accent"
                    android:layout_height="match_parent"/>


            <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_sort"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="16dp"
                    android:tint="@color/pub_color_accent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_sort"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="55dp"
            android:id="@+id/list_global_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

